# =============================================
# SIBARAKU - Production Environment Template
# Version: 1.0.0-public
# =============================================
# 
# Panduan:
# 1. Copy file ini ke .env
# 2. Generate APP_KEY baru dengan: php artisan key:generate
# 3. Sesuaikan dengan pengaturan server produksi
# 4. Pastikan APP_DEBUG=false untuk keamanan
# 

# ==== KONFIGURASI APLIKASI ====
APP_NAME="SIBARAKU - Sistem Inventaris Barang Kubu Raya"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com
ASSET_URL=${APP_URL}

# Regional & Language
APP_LOCALE=id
APP_FALLBACK_LOCALE=id
APP_FAKER_LOCALE=id_ID
APP_TIMEZONE=Asia/Jakarta

# Security
BCRYPT_ROUNDS=12

# ==== KONFIGURASI DATABASE ====
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=sibaraku_db
DB_USERNAME=db_username
DB_PASSWORD=secure_password

# ==== KONFIGURASI SESSION ====
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

# ==== SISTEM FILES ====
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# ==== PERFORMA & CACHE ====
CACHE_STORE=database
# CACHE_PREFIX=

# Redis (jika dibutuhkan)
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Memcached (jika dibutuhkan)
# MEMCACHED_HOST=127.0.0.1

# ==== EMAIL ====
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=your_email@your-domain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="inventory@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ==== PENYIMPANAN CLOUD (OPSIONAL) ====
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ==== LOGGING ====
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ==== KONFIGURASI FRONTEND ====
VITE_APP_NAME="${APP_NAME}"

# ==== KONFIGURASI DEPLOYMENT ====
# Uncomment sesuai jenis deployment

# === SHARED HOSTING ===
# ASSET_URL=https://yourdomain.com/subfolder
# DB_HOST=localhost
# PUBLIC_PATH=/public_html/subfolder

# === VPS/DEDICATED SERVER ===
# ASSET_URL=https://sibaraku.your-domain.com
# SANCTUM_STATEFUL_DOMAINS=sibaraku.your-domain.com

# ==== KONFIGURASI NGROK (DEVELOPMENT) ====
# Uncomment untuk akses dari luar via ngrok
# APP_URL=https://your-subdomain.ngrok-free.app
# ASSET_URL=https://your-subdomain.ngrok-free.app
# SESSION_DOMAIN=.ngrok-free.app
# SANCTUM_STATEFUL_DOMAINS=your-subdomain.ngrok-free.app

# ==== KONFIGURASI ORGANISASI ====
ORG_NAME="Kabupaten Kubu Raya"
ORG_SHORT_NAME="Kubu Raya"
ORG_LOGO_PATH="images/logo-kab.png"
ORG_ADDRESS="Jl. Soekarno-Hatta No. 1, Kabupaten Kubu Raya"
ORG_PHONE="+62-561-12345678"
ORG_EMAIL="info@kuburaya.go.id"
ORG_WEBSITE="https://kuburaya.go.id"

# ==== END OF CONFIGURATION ====
